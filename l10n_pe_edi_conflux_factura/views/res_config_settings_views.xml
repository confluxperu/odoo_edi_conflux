<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_form_inherit_l10n_pe_edi_conflux_factura" model="ir.ui.view">
        <field name="name">res.config.settings.form.inherit.l10n.pe.edi.conflux.factura</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="l10n_pe_edi.res_config_settings_form_inherit_l10n_pe_edi"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='invoicing_peruvian_settings']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible': [('l10n_pe_edi_provider', '!=', 'conflux')]}">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">
                        <span class="o_form_label mt16">Conflux Authorization</span>
                        <div class="text-muted">
                            <a href="https://conflux.pe">Conflux</a> is an official SUNAT provider with number of authorization 214-005-0001193/SUNAT, you need an account in conflux to use the services<br/>
                            How do you get it?: <a href="https://see.conflux.pe/register">here</a><br/>
                        </div>
                        <div class="content-group">
                            <div class="row mt32">
                                <label for="l10n_pe_edi_conflux_client_id" class="col-md-5 o_light_label"/>
                                <field name="l10n_pe_edi_conflux_client_id"/>
                                <label for="l10n_pe_edi_conflux_token" class="col-md-5 o_light_label"/>
                                <field name="l10n_pe_edi_conflux_token" password="True"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>